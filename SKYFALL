-- 🖼 Fondo de Gojo
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui")
gui.Name = "SkyfallBackground"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local background = Instance.new("ImageLabel")
background.Name = "BackgroundImage"
background.Image = "rbxassetid://11401525648" -- Imagen de Gojo
background.Size = UDim2.new(1, 0, 1, 0)
background.Position = UDim2.new(0, 0, 0, 0)
background.BackgroundTransparency = 1
background.ImageTransparency = 0.2
background.ZIndex = 0
background.Parent = gui

-- 🚀 Cargar Rayfield UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Skyfall Script Hub",
   LoadingTitle = "Preparing your AMAZING script hub😎",
   LoadingSubtitle = "made by Kotokha",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Player Changer"
   },
   Discord = {
      Enabled = true,
      Invite = "TA7TfCSVCQ",
      RememberJoins = false
   },
   KeySystem = false,
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"Hello"}
   }
})

-- ✅ Notificación al ejecutar
Rayfield:Notify({
   Title = "Executed The Script Successfully",
   Content = "A Good Script Hub",
   Duration = 5,
   Actions = {
      Ignore = {
         Name = "Okay!",
         Callback = function()
            print("The user tapped Okay!")
         end
      }
   }
})

-- 🌐 Universals Tab
local UniversalsTab = Window:CreateTab("Universals", nil)
UniversalsTab:CreateSection("Universal Scripts")

UniversalsTab:CreateButton({
   Name = "Infinite Yield",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source"))()
   end
})

UniversalsTab:CreateButton({
   Name = "OrangeX hub",
